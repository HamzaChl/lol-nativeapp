{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": ["./*"],
      "@assets/*": ["./assets/*"] // Ajoutez cette ligne si nécessaire
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.tsx", // Assure l'inclusion des fichiers à tous les niveaux
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
